<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/TwitterActionBar</item>
        <item name="android:actionBarTabTextStyle">@style/TwitterActionBarTabText</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/TwitterActionBar</item>
        <item name="actionBarTabTextStyle">@style/TwitterActionBarTabText</item>
    </style>


    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="TwitterActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/twitter_blue</item>
        <item name="android:titleTextStyle">@style/TwitterActionBar.TitleTextStyle</item>

        <!-- Support library compatibility -->
        <item name="background">@color/twitter_blue</item>
        <item name="titleTextStyle">@style/TwitterActionBar.TitleTextStyle</item>
    </style>

    <style name="TwitterActionBar.TitleTextStyle"
        parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TwitterActionBarTabText" parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/twitter_blue</item>
    </style>

</resources>
